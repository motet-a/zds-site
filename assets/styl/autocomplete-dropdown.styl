
@require "variables"

.autocomplete-wrapper
  position relative

  .autocomplete-dropdown
    position absolute
    z-index 10
    box-shadow 0 0.1rem 0.5rem rgba(black, 0.25)

    $border = solid 1px #ccc

    .autocomplete-dropdown-header
      padding 0
      margin 0
      padding-left 5px
      background-color #eee
      border-right $border
      border-left  $border
      font-weight normal

    ul
      padding 0
      margin 0
      background-color white
      border-right $border
      border-left $border

      li
        padding 4px 10px
        border-bottom solid 1px #ccc
        list-style none

        &.active, &:hover
          background-color lighten($blue, 10%)
          color white
