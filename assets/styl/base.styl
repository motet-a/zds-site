
@require "variables"

*
  box-sizing border-box

html
  font-size 16px
  font-family $font-sans-serif
  line-height 1.5
  min-height 100%

html, body
  flex 1
  display flex
  flex-direction column

body
  background-color white
  z-index 0 // for the mobile menu



a
  color $turquoise
  text-decoration none
  &:hover
    text-decoration underline

p
  margin 1rem 0

// TODO: Remove this crap from the templates
// br
//   display none

hr
  border none
  height $thin-line-width
  background $color-hr

time .short, .short-date // TODO: Why two different classes?
  // There is always a long date, prefer long ones.
  display none

body.flexpage
  background #fafafa

.content-container
  flex 1
  min-width 0

  display flex
  flex-direction column

  &>.content-wrapper
    margin 2rem
    &.row
      margin 1rem

    @media screen and (max-width: $small)
      margin 1rem
      &.row
        margin 0rem

.flexpage-header, .flexpage-body
  display flex
  justify-content center

.flexpage-wrapper
  display flex
  flex-direction column
  max-width $max-width
  min-width 0
  flex-grow 1

.mobile-menu
  display none

.page-container
  background white
  flex 1
  display flex
  flex-direction column
  overflow hidden // Don't overflow onto the mobile menu

.main-container
  flex 1
  display flex
  .main.wrapper
    flex 1
    display flex
    // The sidebar is at the end in the markup, but it should be
    // displayed first (on the left)
    flex-direction row-reverse
    min-width 0
    flex-grow 1

body:not(.flexpage)
  .main-container
    .main.wrapper
      max-width $max-width

body.content-cols
  .main-container
    .main.wrapper
      max-width $max-width * 2

.no-sidebar .main-container
  justify-content center

reaction-bubble() // TODO
  color $orange
  background white
  &:hover
    color white
    background $orange


#accessibility, #cookies-eu-banner
  display none
  color white
  background darken($blue, 30%)
  a
    color inherit


.modals-container
  display none


.row
  display flex
  margin -1rem
  @media screen and (max-width: $medium)
    flex-direction column

  .column
    min-width 0
    flex-basis 100%
    margin 1rem
    display flex
    flex-direction column
    with-underlined-headings()

.article-content
  with-underlined-headings($display-block = true)

.article-content, .message-content
  code, pre
    font-family 'Source Code Pro', monospace, sans-serif
    color #a00
    background #eee
    padding 0.125em 0.5em
    font-size 0.9em


.content-wrapper
  position relative // .license tags are absolute-positioned
  with-underlined-headings($display-block = true)
  .open-zen-mode
    button()
    display block
    margin 0.5rem 0

  .authors
    border-bottom solid $thin-line-width $color-hr
    padding-bottom 0.5rem

  .pubdate, .authors, .license
    color #aaa

  .license
    display block
    margin 0
    font-size 0.8rem

  &>.license:first-child
    display none
    &+h1
      margin-top 0

  @media screen and (min-width: $medium)
    &>.license:first-child
      // TODO: This is quite dirty. Try to move the .license tag inside
      // the <h1>.
      display block
      position absolute
      top .8rem
      right 0

body.content-cols
  .row
    flex-direction row
    @media screen and (max-width: $large)
      flex-direction column


body:not(.flexpage) .content-container
  .subtitle
    color #999
    font-size 1.2rem
    border-bottom none
    margin-top 0
  h1+h2.subtitle
    margin-top -.67em // Cancel normalize.css margin

// TODO: Rename this class, itâ€™s confusing since a card is a whole
// different thing
.member-card
  display flex
  align-items center

  margin 0 -0.5rem

  &>*
    margin 0.5rem

  .member-avatar
    display flex

  .member-infos
    list-style none
    padding 0

  @media screen and (max-width: $small)
    flex-direction column
    align-items stretch


.column .topic-list
  .topic-last-answer
    display none


.authors
  li
    display inline-block
    margin 0 0.25rem

  ul
    display inline-block
    padding 0
    margin 0
    vertical-align middle

  .avatar
    width 2rem
    height @width

  .member-item
    display flex
    padding 0.25rem
    &:hover
      background #eee
      color $turquoise
      text-decoration none
    span
      align-self center
      padding 0 0.5rem

.avatar
  width 3rem
  height @width
  outline solid 1px rgba(black, 0.08)

table, td, tr, th
  border solid 1px #eee
  border-spacing 0

td, th
  padding 0.25rem

table.fullwidth
  width 100%


// Used in the header above articles and tutorials
ul.taglist
  list-style none
  padding 0
  a
    tag-button()
  li
    display inline-block


.new-btn-container
  a
    display block
