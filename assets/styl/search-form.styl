
@require "variables"

search-form()
  padding 2rem 8rem
  @media screen and (max-width: $medium)
    padding 1rem
  display flex

  text-shadow none

  .control-group, .controls
    flex 1
    display flex
    margin 0

  form
    position relative
    z-index 0
    flex 1
    display flex

    &:after
      content ''
      background url('../images/home-clem@2x.png')
      width 60px
      height 136px //118px
      background-size 100%
      background-repeat no-repeat
      position absolute
      top -70px
      left -50px
      @media screen and (min-width: $medium)
        left -20px

      body.vc-clem-christmas &
        background-image url('../images/home-clem-christmas@2x.png')

      body.vc-clem-halloween &
        background-image url('../images/home-clem-halloween@2x.png')
        width 161px
        left -100px
        @media screen and (min-width: $medium)
          left -80px


  label // “Recherche”
    position absolute
    top 0
    bottom 0
    left 1.5rem
    color black
    display flex
    align-items center
    height initial
    z-index 1
    user-select none
    @media screen and (min-width: $medium)
      left 3.5rem

  input
    flex 1
    border none
    font-size 1rem
    height 2.5rem
    padding 0
    padding-left 6.5rem
    padding-right 3rem
    width 0
    @media screen and (min-width: $medium)
      padding-left 8.5rem
    &::placeholder
      color #aaa

  button[type=submit].btn
    position absolute
    top 0
    bottom 0
    right 0

    &:after
      content ''
      icon($search)

    width 2.5rem
    z-index 1
    padding 0
    display flex
    align-items center
    justify-content center
    background none
    &:hover
      background rgba(black, 0.1)
